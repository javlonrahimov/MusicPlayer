<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?selectableItemBackground"
    android:layout_height="@dimen/itemPlaylistHeight64"
    android:padding="@dimen/padding4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagePlaylistItemPlaylist"
        android:src="@drawable/icon"
        android:layout_width="@dimen/circleRadius52"
        android:layout_height="@dimen/circleRadius52"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/namePlaylistItemPlaylist"
        android:textColor="@color/colorAccentSecondary"
        android:textSize="@dimen/textSize20"
        android:layout_marginStart="@dimen/margin8"
        app:layout_constraintEnd_toStartOf="@id/trackCountPlaylistItemPlaylist"
        app:layout_constraintStart_toEndOf="@id/imagePlaylistItemPlaylist"
        app:layout_constraintTop_toTopOf="@id/imagePlaylistItemPlaylist"
        app:layout_constraintBottom_toBottomOf="@id/imagePlaylistItemPlaylist"
        tools:text="Guardians of the galaxy"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/trackCountPlaylistItemPlaylist"
        android:layout_margin="4dp"
        tools:text="9 tracks"
        android:textSize="@dimen/textSize16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>