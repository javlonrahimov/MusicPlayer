<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemPlaylistHeight64"
    android:background="?selectableItemBackground"
    android:padding="@dimen/padding4">

    <ImageView
        android:id="@+id/imageItemCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_icon"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textItemCreate"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin8"
        android:text="@string/create_new_playlist"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize20"
        app:layout_constraintBottom_toBottomOf="@id/imageItemCreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageItemCreate"
        app:layout_constraintTop_toTopOf="@id/imageItemCreate" />

</androidx.constraintlayout.widget.ConstraintLayout>