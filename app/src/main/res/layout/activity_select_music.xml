<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectMusic">

    <FrameLayout
        android:id="@+id/toolbarSelectMusicActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/padding4"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/selectAllSelectActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onSelectAllPressed"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/selectAllImageSelectActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin8"
                    android:contentDescription="@string/unchecked_icon"
                    android:src="@drawable/ic_panorama_fish_eye_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/all"
                    android:textColor="@color/colorAccentSecondary"
                    android:textSize="@dimen/textSize18" />
            </LinearLayout>

            <TextView
                android:id="@+id/selectedTrackCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin8"
                android:text="@string/select_tracks"
                android:textColor="@color/colorAccentSecondary"
                android:textSize="@dimen/textSize22" />
        </LinearLayout>

        <Button
            android:id="@+id/doneButtonSelectMusicActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/margin8"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/done"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/textSize18" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/match_constraint"
        android:paddingStart="@dimen/margin8"
        android:paddingEnd="@dimen/margin8"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarSelectMusicActivity"
        tools:listitem="@layout/item_music_selectable" />

</androidx.constraintlayout.widget.ConstraintLayout>