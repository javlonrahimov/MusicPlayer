<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemMusicHeight70"
    android:background="?selectableItemBackground"
    android:padding="@dimen/padding4">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageItemMusic"
        android:layout_width="@dimen/circleRadius58"
        android:layout_height="@dimen/circleRadius58"
        android:src="@drawable/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin8"
        android:paddingEnd="@dimen/margin8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageItemMusic"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleItemMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/colorAccentSecondary"
            android:textSize="@dimen/textSize16"
            tools:text="I would" />

        <TextView
            android:id="@+id/artistItemMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/textSize14"
            tools:text="Connie Talbot" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>